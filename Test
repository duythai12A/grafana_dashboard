 - name: Quote every item under kubelet-arg
      ansible.builtin.replace:
        path: "{{ rke2_config_path }}"
        # nếu dòng bắt đầu bằng "- " và CHƯA có dấu " ở đầu -> bọc bằng "
        regexp: '^(\s*-\s*)([^"\n].*?)\s*$'
        replace: '\1"\2"'
        after: '^kubelet-arg:\s*$'
        before: '^[^\s]'
      notify: []

    - name: Normalize 2-space indent before list items (optional)
      ansible.builtin.replace:
        path: "{{ rke2_config_path }}"
        regexp: '^\s*-\s'
        replace: '  - '
        after: '^kubelet-arg:\s*$'
        before: '^[^\s]'
