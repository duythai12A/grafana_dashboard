-- vào DB mà Harbor dùng (ví dụ: registry)
\c registry;

-- cấp quyền cho user (ví dụ harbor_user)
GRANT ALL PRIVILEGES ON SCHEMA registry TO harbor_user;
GRANT ALL PRIVILEGES ON ALL TABLES IN SCHEMA registry TO harbor_user;
GRANT ALL PRIVILEGES ON ALL SEQUENCES IN SCHEMA registry TO harbor_user;

-- cho các bảng mới tạo tự động cũng được quyền
ALTER DEFAULT PRIVILEGES IN SCHEMA registry GRANT ALL ON TABLES TO harbor_user;
ALTER DEFAULT PRIVILEGES IN SCHEMA registry GRANT ALL ON SEQUENCES TO harbor_user;
