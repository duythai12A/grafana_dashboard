- name: Add hosts from vars file
  add_host:
    name: "{{ item.instance }}"
    groups: from_vars
    ansible_host: "{{ item.instance }}"
    ansible_user: vt_admin                     # <<< quan trọng
    ansible_ssh_private_key_file: ~/.ssh/id_rsa   # hoặc ansible_password: xxxx
    become: true
    become_method: sudo                         # hoặc su nếu môi trường bạn dùng su
    log_paths: ["{{ item.path }}"]
  loop: "{{ servers }}"
