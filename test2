apiVersion: v1
kind: Pod
metadata:
  name: debug-pvc
  namespace: monitoring
spec:
  containers:
    - name: debug
      image: alpine:3
      command: ["/bin/sh", "-c", "sleep infinity"]
      volumeMounts:
        - name: data
          mountPath: /mnt/data
  volumes:
    - name: data
      persistentVolumeClaim:
        claimName: postgres-data   # ⚠️ thay bằng tên PVC thực tế
  restartPolicy: Never
